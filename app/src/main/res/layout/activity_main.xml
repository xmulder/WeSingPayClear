<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1.全程连接VPN\n2.本机只保留可支付的Google账号\n3.按照以下步骤完成后,重新安装带有google签名的WeSing版本."
            android:textSize="15dp"
            android:textColor="#ff0000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="操作步骤:"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button_start_vpn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="启动Express Vpn"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/button_uninstall_wesing"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="卸载 WeSing"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/button_clear_googleplay_cache"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="清除Google Play缓存"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/button_clear_google_service"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="清除Google服务缓存"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/button_clear_google_gsf"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="清除Google服务框架缓存"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/button_clear_google_partnersetup"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="清除Google合作伙伴缓存"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/button_clear_google_cache"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="清除Google缓存"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安装Google Play WeSing版本:"
            android:textSize="15dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button_install_wesing_googleplay"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="GooglePlay WeSing"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>